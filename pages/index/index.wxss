/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container{
    height: 100%;
}
.swiper{
    width: 100%;
    height: 100%;
}
.slide-image{
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: cover;
}

.thinkNote-wrap{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}

.btn-begin{
    position: absolute;
    bottom: 10%;
    left: 50%;
    width: 280rpx;
    margin-left: -140rpx;
    background-color: #09ba07;
    opacity: 0.7;
}
.button-hover {
    opacity: 1;
}

.audio{
    position: absolute;
    visibility: hidden;
}

.userinfo {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  bottom: 10rpx;
  right: 10rpx;
  border-radius: 50%;
  margin:  15rpx;
  text-align: center;
  background-size: cover;
}


