/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container{
    height: 100%;
}
.swiper{
    width: 100%;
    height: 100%;
}
.slide-image{
    width: 100%;
    height: 100%;
    display: block;
    background-position: center;
    background-size: cover;
}

.thinkNote-wrap{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 10;
}
.thinkNote-wrap .thinkNote-contant{
    position: absolute;
    top: 400rpx;
    left: 50%;
    margin-left: -250rpx;
    width: 500rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.thinkNote-wrap .title{
    display: inline-block;
    width: 50%;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 25%;
    border-bottom: 1px solid #ccc;
    text-align: center;
    font-weight: bold;
    color: #aaa;
}

.thinkNote-wrap .thinkNote{
    width: 400rpx;
    height: 250rpx;
    margin: 30rpx auto;
    padding: 15rpx 20rpx;
    border-radius: 15rpx;
    border: 1px solid #ddd;
    background-color: #fafafa;
    font-size: 35rpx;
    color: #333;
}
.thinkNote-wrap .btn-save{
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx auto;
}

.btn-begin{
    position: absolute;
    bottom: 10%;
    left: 50%;
    width: 280rpx;
    margin-left: -140rpx;
    background-color: #09ba07;
    opacity: 0.7;
    z-index: 2;
}
.button-hover {
    opacity: 1;
}

#myAudio{
    /*display: none;*/
    position: absolute;
    visibility: hidden;
}

.userinfo {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  bottom: 10rpx;
  right: 10rpx;
  border-radius: 50%;
  margin:  15rpx;
  text-align: center;
  background-size: cover;
}


